{#
/**
 * @file
 * Facets checkbox list with antiquarian styling.
 */
#}
{% if items or empty %}
  <div class="mb-4">
    {% if title %}
      <h3 class="text-sm font-semibold text-ink mb-3 uppercase tracking-wider" style="font-family: var(--font-accent);">
        {{ title }}
      </h3>
    {% endif %}
    {%- if items -%}
      <{{ list_type }}{{ attributes.addClass(['grid', 'grid-cols-1', 'sm:grid-cols-2', 'lg:grid-cols-3', 'xl:grid-cols-4', 'gap-2']) }}>
      {%- for item in items -%}
        <li{{ item.attributes.addClass('filter-checkbox') }}>{{ item.value }}</li>
      {%- endfor -%}
      </{{ list_type }}>
    {%- else -%}
      <p class="text-ink-muted text-sm italic">{{- empty -}}</p>
    {%- endif -%}
  </div>
{%- endif %}
