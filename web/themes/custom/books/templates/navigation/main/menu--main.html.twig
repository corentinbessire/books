{% if items %}
  {% for item in items %}
    {% set base_classes = [
      'nav-link',
      'inline-block',
      'relative',
      'px-6',
      'py-3',
      'text-base',
      'font-medium',
      'tracking-wide',
      'uppercase',
      'transition-colors',
      'duration-300',
    ] %}
    {% set color_classes = item.in_active_trail
      ? ['text-burgundy', 'nav-link--active']
      : ['text-ink-muted', 'hover:text-ink']
    %}
    {{ link(item.title, item.url, {'class': (base_classes|merge(color_classes))|join(' '), 'style': "font-family: var(--font-accent);"}) }}
  {% endfor %}
{% endif %}
