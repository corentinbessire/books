{% set class = [
  'text-gray-600',
  'py-4',
  'px-6',
  'block',
  'hover:text-blue-500',
  'focus:outline-none',
] %}
{% if is_active == true %}
  {% set class = class|merge([
    'text-blue-500', 'border-b-2', 'font-medium', 'border-blue-500'
  ]) %}
{% endif %}
{% set link = link|merge({ '#attributes': { 'class': class } }) %}

{{ link }}
