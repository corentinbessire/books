{#
/**
 * @file
 * Book grid layout with staggered animation.
 */
#}
{% if title %}
  <h3 class="text-[1.75rem] font-semibold text-[var(--color-ink)] text-center mb-6" style="font-family: var(--font-display);">{{ title }}</h3>
{% endif %}
<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4 md:gap-6 animate-stagger">
  {% for row in rows %}
    {{- row.content -}}
  {% endfor %}
</div>
