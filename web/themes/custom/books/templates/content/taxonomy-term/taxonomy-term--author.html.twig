{% if content.field_image | render %}
  <div class="flex justify-center">
    {{ content.field_image }}
  </div>
{% else %}
  <div class="flex flex-wrap justify-center">
    <div class="p-6 shadow-md rounded-full max-w-full h-auto align-middle border border-stone-300 bg-stone-200">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-32 w-32 text-burgundy" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
    </div>
  </div>
{% endif %}
<h1 class="text-3xl text-center py-6 text-ink" style="font-family: var(--font-display);">{{ name }}</h1>
<div class="text-center text-ink-muted" style="font-family: var(--font-body);">{{ content.field_bio }}</div>
