<div class="reading-now">
  <div class="flex flex-col md:flex-row items-center gap-6">
    <!-- Book Cover -->
    <div class="w-40 flex-shrink-0 rounded-lg overflow-hidden shadow-lg">
      {{ content.extra_field_book_cover }}
    </div>

    <!-- Book Info -->
    <div class="flex-1 text-center md:text-left">
      <h3 class="text-2xl font-bold text-ink mb-2" style="font-family: var(--font-display);">
        {{ label }}
      </h3>
      <p class="text-ink-muted mb-4 flex items-center justify-center md:justify-start gap-2">
        <svg class="w-4 h-4 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span>{{ 'Started' | t }}</span>
        <span class="font-medium">{{ content.field_start_date }}</span>
      </p>
      {{ content.field_status }}
    </div>
  </div>
</div>
