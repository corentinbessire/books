<article class="bg-cream border border-stone-300 rounded-lg p-8 shadow-lg animate-fade-in-up">
  <section class="flex flex-col lg:flex-row gap-8 lg:gap-12">
    <!-- Book Cover -->
    <div class="flex-shrink-0 mx-auto lg:mx-0">
      <div class="book-detail-cover w-48 md:w-56 lg:w-64">
        {{ content.field_cover }}
      </div>
    </div>

    <!-- Book Info -->
    <div class="flex-1 space-y-4">
      {% if content.field_serie | render %}
        <div class="inline-flex items-center gap-1.5 px-3.5 py-1.5 bg-stone-200 border border-stone-300 rounded-full text-sm text-ink-muted" style="font-family: var(--font-accent);">
          <span>Book {{ content.field_serie_number }} of</span>
          <span class="text-burgundy font-semibold">{{ content.field_serie }}</span>
        </div>
      {% endif %}

      <h1 class="text-3xl lg:text-4xl xl:text-5xl" style="font-family: var(--font-display);">
        {{ label }}
      </h1>

      <p class="text-lg text-ink-muted" style="font-family: var(--font-body);">
        by <span class="text-burgundy font-medium">{{ content.field_authors }}</span>
      </p>

      <!-- Book Metadata -->
      <div class="bg-stone-200 border border-stone-300 rounded-md p-5 mt-6">
        {% if content.field_isbn | render %}
          <div class="flex justify-between py-2 border-b border-dotted border-stone-300 text-[0.9375rem]">
            <span class="text-ink-muted uppercase text-xs tracking-wider" style="font-family: var(--font-accent);">ISBN</span>
            <span class="text-ink font-medium">{{ content.field_isbn }}</span>
          </div>
        {% endif %}
        {% if content.field_pages | render %}
          <div class="flex justify-between py-2 border-b border-dotted border-stone-300 text-[0.9375rem]">
            <span class="text-ink-muted uppercase text-xs tracking-wider" style="font-family: var(--font-accent);">Pages</span>
            <span class="text-ink font-medium">{{ content.field_pages }}</span>
          </div>
        {% endif %}
        {% if content.field_publisher | render %}
          <div class="flex justify-between py-2 border-b border-dotted border-stone-300 text-[0.9375rem]">
            <span class="text-ink-muted uppercase text-xs tracking-wider" style="font-family: var(--font-accent);">Publisher</span>
            <span class="text-ink font-medium">{{ content.field_publisher }}</span>
          </div>
        {% endif %}
        {% if content.field_release | render %}
          <div class="flex justify-between py-2 border-b border-dotted border-stone-300 text-[0.9375rem]">
            <span class="text-ink-muted uppercase text-xs tracking-wider" style="font-family: var(--font-accent);">Release</span>
            <span class="text-ink font-medium">{{ content.field_release }}</span>
          </div>
        {% endif %}
        {% if content.field_genres | render %}
          <div class="flex justify-between py-2 text-[0.9375rem]">
            <span class="text-ink-muted uppercase text-xs tracking-wider" style="font-family: var(--font-accent);">Genres</span>
            <span class="text-ink font-medium">{{ content.field_genres }}</span>
          </div>
        {% endif %}
      </div>

      {% if content.field_excerpt | render %}
        <div class="prose prose-lg max-w-none text-stone-700 mt-6 pt-6 border-t border-stone-300">
          {{ content.field_excerpt }}
        </div>
      {% endif %}
    </div>
  </section>
</article>
