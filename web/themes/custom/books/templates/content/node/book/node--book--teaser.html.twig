<article class="book-card group relative rounded overflow-hidden bg-cream transition-all duration-400">
  <a href="{{ url }}" class="book-cover block relative aspect-[2/3] overflow-hidden">
    {% if content.field_cover | render %}
      {{ content.field_cover }}
    {% else %}
      {# Placeholder for books without cover #}
      <div class="w-full h-full bg-stone-200 flex items-center justify-center p-4">
        <div class="text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-ink-muted mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                  d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/>
          </svg>
          <span class="text-sm text-ink-muted leading-tight block" style="font-family: var(--font-display);">
            {{ label }}
          </span>
        </div>
      </div>
    {% endif %}
  </a>
</article>
