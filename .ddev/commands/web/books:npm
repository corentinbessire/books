#!/bin/bash
## Description: Run npm commands in the Sillage theme directory
## Usage: books:npm  <npm-command> [args]
## Example: "ddev books:npm install" or "ddev books:npm run build"

if [ ! -d "/var/www/html/web/themes/custom/books" ]; then
    echo "Error: Theme 'books' not found in web/themes/custom/"
    exit 1
fi
cd /var/www/html/web/themes/custom/books || exit
exec npm "$@"
